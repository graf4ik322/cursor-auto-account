# =============================================================================
# ФАЙЛ ПРИМЕРА НАСТРОЕК ОКРУЖЕНИЯ ДЛЯ CURSOR ACCOUNT MANAGER
# =============================================================================
# 
# Скопируйте этот файл в .env и настройте переменные под вашу среду
# cp .env.example .env
#
# ВАЖНО: Никогда не коммитьте файл .env в git!
# =============================================================================

# =============================================================================
# НАСТРОЙКИ БАЗЫ ДАННЫХ MYSQL
# =============================================================================

# Хост базы данных MySQL
# - localhost - если MySQL на том же сервере
# - IP-адрес или домен - если MySQL на удаленном сервере
DB_HOST=localhost

# Порт MySQL сервера (стандартный порт 3306)
# Измените только если ваш MySQL работает на другом порту
DB_PORT=3306

# Имя пользователя MySQL
# - root - для локальной разработки (не рекомендуется для продакшена)
# - cursor_user - рекомендуется создать отдельного пользователя
DB_USER=root

# Пароль пользователя MySQL
# ОБЯЗАТЕЛЬНО используйте надежный пароль!
# Не используйте простые пароли типа "123456", "password", "admin"
# Рекомендуется: минимум 12 символов, буквы + цифры + спецсимволы
DB_PASSWORD=your_secure_password_here

# Название базы данных
# База данных будет создана автоматически при первом запуске
DB_NAME=cursor_accounts

# =============================================================================
# НАСТРОЙКИ БЕЗОПАСНОСТИ
# =============================================================================

# Секретный ключ для JWT токенов
# Должен быть длинной случайной строкой
# Сгенерируйте новый ключ командой:
# python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your_random_secret_key_here_make_it_long_and_random

# Срок действия JWT токенов в днях
# По умолчанию 30 дней, можно увеличить или уменьшить
TOKEN_EXPIRY_DAYS=30

# =============================================================================
# НАСТРОЙКИ АДМИНИСТРАТОРА
# =============================================================================

# Имя пользователя администратора
# Используется для входа в административную панель
ADMIN_USERNAME=admin

# Пароль администратора
# ОБЯЗАТЕЛЬНО измените на надежный пароль!
# Этот пароль дает полный доступ к системе
ADMIN_PASSWORD=your_admin_password_here

# =============================================================================
# НАСТРОЙКИ EMAIL
# =============================================================================

# Домен для email адресов
# Используется при регистрации аккаунтов Cursor
# Должен быть ваш собственный домен с настроенной переадресацией email
# Примеры: yourdomain.com, mail.yourdomain.com
EMAIL_DOMAIN=your_email_domain.com

# =============================================================================
# НАСТРОЙКИ СЕРВЕРА
# =============================================================================

# IP-адрес для запуска приложения
# 0.0.0.0 - слушать на всех сетевых интерфейсах (рекомендуется)
# 127.0.0.1 - только локальный доступ
HOST=0.0.0.0

# Порт для запуска приложения
# По умолчанию 8001
# Измените если порт занят другим приложением
PORT=8001

# Режим отладки
# true - включить режим отладки (только для разработки)
# false - продакшен режим (рекомендуется)
DEBUG=false

# =============================================================================
# ДОПОЛНИТЕЛЬНЫЕ НАСТРОЙКИ (опционально)
# =============================================================================

# Логирование
# Уровень логирования (DEBUG, INFO, WARNING, ERROR, CRITICAL)
# LOG_LEVEL=INFO

# Максимальное количество аккаунтов в базе данных
# MAX_ACCOUNTS=1000

# Интервал очистки старых аккаунтов (в днях)
# ACCOUNT_CLEANUP_DAYS=90

# =============================================================================
# ПРИМЕРЫ НАСТРОЕК ДЛЯ РАЗНЫХ СРЕД
# =============================================================================

# === ЛОКАЛЬНАЯ РАЗРАБОТКА ===
# DB_HOST=localhost
# DB_USER=root
# DB_PASSWORD=dev_password
# DEBUG=true

# === ПРОДАКШЕН С ОТДЕЛЬНЫМ ПОЛЬЗОВАТЕЛЕМ MYSQL ===
# DB_HOST=localhost
# DB_USER=cursor_user
# DB_PASSWORD=very_secure_password_123!
# DEBUG=false

# === УДАЛЕННАЯ БАЗА ДАННЫХ ===
# DB_HOST=db.yourdomain.com
# DB_USER=cursor_user
# DB_PASSWORD=remote_db_password
# DEBUG=false

# =============================================================================
# ИНСТРУКЦИИ ПО БЕЗОПАСНОСТИ
# =============================================================================
#
# 1. Всегда используйте надежные пароли
# 2. Не используйте одинаковые пароли для разных сервисов
# 3. Регулярно обновляйте пароли
# 4. Ограничьте доступ к базе данных только необходимыми IP-адресами
# 5. Используйте HTTPS в продакшене
# 6. Регулярно делайте резервные копии базы данных
# 7. Мониторьте логи на предмет подозрительной активности
#
# =============================================================================